FROM jenkins/inbound-agent:latest

USER root

# עדכון apt והתקנת כלים בסיסיים (Python3, pip3, Node.js, npm, Docker CLI, git, curl)
RUN apt-get update && \
    apt-get install -y --no-install-recommends \
        python3 \
        python3-pip \
        nodejs \
        npm \
        docker.io \
        git \
        curl \
        unzip \
        gnupg2 \
        lsb-release \
    && rm -rf /var/lib/apt/lists/*

# התקנת Snyk
RUN npm install -g snyk

# חזרה למשתמש jenkins
USER jenkins
WORKDIR /home/jenkins/agent
ENV PATH="/usr/bin:/usr/local/bin:$PATH"

